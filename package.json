{
  "name": "dom-to-pdf-magic",
  "version": "0.4.0",
  "description": "Generates a printable paginated pdf from DOM node using HTML5 canvas and svg.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codingleo/dom-to-pdf"
  },
  "dependencies": {
    "dom-to-image": "https://github.com/dmapper/dom-to-image",
    "jspdf": "^2.5.1"
  },
  "devDependencies": {
    "@types/dom-to-image": "^2.6.7",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.7",
    "jsdom": "^26.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "keywords": [
    "javascript",
    "dom",
    "pdf",
    "html",
    "canvas",
    "svg",
    "client-side",
    "print",
    "paginate",
    "page-break"
  ],
  "author": {
    "name": "Leonardo Ribeiro",
    "email": "leoribeiro.dsgn@gmail.com",
    "url": "https://leoribeiro.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codingleo/dom-to-pdf/issues"
  },
  "homepage": "https://github.com/codingleo/dom-to-pdf#readme"
}
